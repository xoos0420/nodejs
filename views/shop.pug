extends layouts/main-layout.pug

block styles

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRMEdvT-Ke18WbbyAOfpSgv1ZWR2-jrV0KSXQ&usqp=CAU", alt="A book")
                        .card__content
                            h2.product__price $ 19.99
                            p.product__description A very interesting book
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products